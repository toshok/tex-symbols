(defun replace-symbol ()
  (interactive)
  (setq start (save-excursion
		(skip-chars-backward "a-zA-Z")
		(if (and (not (equal (point) (point-min))) (string-equal (buffer-substring (- (point) 1) (point)) "\\"))
		    (progn
		      (backward-char 1)
		      (point))
		  nil)))
  (if start
      (progn
	(setq sym-name (buffer-substring (+ start 1) (point)))
	(setq sym (assoc sym-name tex-symbol-alist))
	(if sym
	    (progn
	     (delete-region start (point))
	     (insert (cdr sym)))))))


(global-set-key "\C-\\" 'replace-symbol)
